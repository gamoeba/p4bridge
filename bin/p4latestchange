#!/bin/bash
# Check for proper number of command line args.

EXPECTED_ARGS=1
E_BADARGS=65

if [ $# -ne $EXPECTED_ARGS ]
then
  echo "Usage: `basename $0` {changelist-num}"
  exit $E_BADARGS
fi

git tag -l | grep perforce# | sed 's/perforce#//' | gawk -v lastchange=$1 '{ if ( $1<= lastchange) print $1 }' | sort -n -r | echo "perforce#"`head -n 1`
