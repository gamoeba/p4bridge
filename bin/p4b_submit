#!/bin/bash

function printUsage()
{
    echo "Usage: p4b submit \"changelist description\""
}

if [ $# -eq 0 ]
then
    printUsage
    exit 1
fi

. p4b_setdepot
FILES=`p4 opened 2>/dev/null | sed -e 's/#.*//g' | while read FILE; do printf "\\t%s\\n" $FILE; done`
echo -e "Change: new\nDescription: $1\nFiles:\n$FILES" | p4 submit -i 2>/dev/null
