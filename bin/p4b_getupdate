#!/bin/bash
source p4butils
setdepot
echo "fetching changelist $P4DEPOT@$1"
echo $P4CLIENT
p4 sync $P4DEPOT"/..."@$1
echo "after sync"
git --work-tree .p4bridge/root/ add --all
git --work-tree .p4bridge/root/ commit -m "tmp"
amendChangelistWithCommitInfo $1
if [ $? -eq 0 ]
then
setlastp4change $1
else
echo "no changes, changelist skipped"
fi
